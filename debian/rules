#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@

# The first rules (loopback) should be included in udev (see bug #671546).
# Others (bilibop) must be triggered after 60-persistent-*storage.rules.
override_dh_installudev:
	dh_installudev -n --name=loopback
	dh_installudev -n --priority=66 --name=bilibop

# Include the same text at the beginning of the extended description of
# each package, and the same requirement at the end.
override_dh_gencontrol:
	dh_gencontrol -- -Tdebian/substvars
